<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
<p><%= notice %></p>

<h1>投稿一覧</h1>
<%= link_to "新しく投稿する", new_topic_path,class:'btn btn-default' %>
<% @topics.each do |topic| %>
<div class="row">
<%= link_to topic_path(topic) do %>
  <p>タイトル:<%= topic.title %></p>
  <% end %>
  <p>本文:<%= topic.content %></p>
  <%= link_to "投稿を編集する", edit_topic_path(topic.id),class:'btn btn-default btn-sm btn-success' %>
  <%= link_to '投稿を削除する', topic_path(topic.id), method: :delete, data: { confirm: '本当に削除していいですか？' },class: 'btn btn-default btn-sm btn btn-danger' %>
  </div>
<% end %>
</div>
</div>